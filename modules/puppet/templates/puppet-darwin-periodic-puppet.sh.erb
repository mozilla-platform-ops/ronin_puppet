# in the absence of `lockfile`, use a locking dir
# https://unix.stackexchange.com/a/274
LOCK_DIR="/tmp/.periodic-puppet"
PUPPET="/usr/local/bin/run-puppet.sh"

function fail {
    # TODO: report failure to ext service
    echo "${@}"
    exit 1
}

function finish {
    rm -rf $LOCK_DIR
}

mkdir "${LOCK_DIR}" || fail
trap finish EXIT
$PUPPET
