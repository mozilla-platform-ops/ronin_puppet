work_dir: "<%= scope['signing_worker::scriptworker_base'] %>/work"
artifact_dir: "<%= scope['signing_worker::scriptworker_base'] %>/artifacts"
taskcluster_scope_prefix: "<%= @role_config['taskcluster_scope_prefix'] %>"
verbose: true
local_notarization_accounts:
    - notary1
    - notary2
    - notary3
    - notary4
    - notary5
    - notary6
    - notary7
    - notary8
    - notary9
    - notary10
default_keychains:
    - "/Users/<%= scope['signing_worker::user'] %>/Library/Keychains/login.keychain-db"
    - "/Library/Keychains/System.keychain"
dmg_prefix: "<%= @role_config['dmg_prefix'] %>"
mac_config:
    nightly:
        notarize_type: multi_account
        signing_keychain: "<%= @certs_dir %>/nightly-signing.keychain"
        supported_behaviors:
            - mac_sign
            - mac_sign_and_pkg
            - mac_pkg
            - mac_notarize
        sign_with_entitlements: <%= @role_config['nightly_sign_with_entitlements'] %>
        verify_mac_signature: <%= @role_config['nightly_verify_mac_signature'] %>
        base_bundle_id: "<%= @role_config['nightly_base_bundle_id'] %>"
        identity: "<%= @role_config['nightly_identity'] %>"
        keychain_password: "<%= @role_config['nightly_keychain_password'] %>"
        pkg_cert_id: "<%= @role_config['nightly_pkg_cert_id'] %>"
        apple_notarization_account: "<%= @role_config['notarization_account'] %>"
        apple_notarization_password: "<%= @role_config['notarization_password'] %>"
        apple_asc_provider: "<%= @role_config['apple_asc_provider'] %>"
        notarization_poll_timeout: <%= @role_config['notarization_poll_timeout'] %>
        widevine_url: "<%= @role_config['nightly_widevine_url'] %>"
        widevine_user: "<%= @role_config['nightly_widevine_user'] %>"
        widevine_pass: "<%= @role_config['nightly_widevine_pass'] %>"
        widevine_cert: "<%= scope['signing_worker::scriptworker_base'] %>/widevine_prod.crt"
        omnija_url: "<%= @role_config['nightly_omnija_url'] %>"
        omnija_user: "<%= @role_config['nightly_omnija_user'] %>"
        omnija_pass: "<%= @role_config['nightly_omnija_pass'] %>"
    release:
        notarize_type: multi_account
        signing_keychain: "<%= @certs_dir %>/release-signing.keychain"
        supported_behaviors:
            - mac_sign
            - mac_sign_and_pkg
            - mac_pkg
            - mac_notarize
        sign_with_entitlements: <%= @role_config['release_sign_with_entitlements'] %>
        verify_mac_signature: <%= @role_config['release_verify_mac_signature'] %>
        base_bundle_id: "<%= @role_config['release_base_bundle_id'] %>"
        identity: "<%= @role_config['release_identity'] %>"
        keychain_password: "<%= @role_config['release_keychain_password'] %>"
        pkg_cert_id: "<%= @role_config['release_pkg_cert_id'] %>"
        apple_notarization_account: "<%= @role_config['notarization_account'] %>"
        apple_notarization_password: "<%= @role_config['notarization_password'] %>"
        apple_asc_provider: "<%= @role_config['apple_asc_provider'] %>"
        notarization_poll_timeout: <%= @role_config['notarization_poll_timeout'] %>
        widevine_url: "<%= @role_config['release_widevine_url'] %>"
        widevine_user: "<%= @role_config['release_widevine_user'] %>"
        widevine_pass: "<%= @role_config['release_widevine_pass'] %>"
        widevine_cert: "<%= scope['signing_worker::scriptworker_base'] %>/widevine_prod.crt"
        omnija_url: "<%= @role_config['release_omnija_url'] %>"
        omnija_user: "<%= @role_config['release_omnija_user'] %>"
        omnija_pass: "<%= @role_config['release_omnija_pass'] %>"